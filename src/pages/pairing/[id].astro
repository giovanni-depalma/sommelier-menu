---
import Layout from "../../layouts/Layout.astro";
import menu from "../../data/menu";
import wines from "../../data/wines";

export function getStaticPaths() {
    // Flatten menu items to get all IDs
    const allItems = menu.flatMap((category) => category.items);
    return allItems.map((item) => ({
        params: { id: item.id },
        props: { item },
    }));
}

const { item } = Astro.props;
const wineSpanish = wines.find((w) => w.id === item.pairingSpanish.wineId);
const wineItalian = wines.find((w) => w.id === item.pairingItalian.wineId);

if (!wineSpanish || !wineItalian) {
    throw new Error(`Wine not found for pairing: ${item.id}`);
}
---

<Layout title={`Abbinamento: ${item.name} - Restaurante Fusi√≥n`}>
    <header class="page-header">
        <h1>L'Arte dell'Abbinamento</h1>
        <a
            href={`${import.meta.env.BASE_URL}/menu`}
            class="back-link"
            id="back-link"
            onclick="history.back(); return false;">‚Üê Torna al Menu</a
        >
    </header>

    <div class="content-container">
        <div class="pairing-card">
            <div class="dish-section">
                <span class="label">Il Piatto</span>
                <h2>{item.name}</h2>
                <p>{item.description}</p>
            </div>

            <div class="pairing-header">
                <span class="pairing-title">Due Culture, Due Vini</span>
            </div>

            <div class="pairings-grid">
                <!-- Spanish Pairing -->
                <div class="pairing-column spanish-column">
                    <div class="flag-header">
                        <span class="flag-icon">üá™üá∏</span>
                        <span class="country-name">Spagna</span>
                    </div>

                    <div class="wine-section">
                        <h2>
                            <a
                                href={`${import.meta.env.BASE_URL}/wines/${wineSpanish.id}`}
                                class="wine-link"
                            >
                                {wineSpanish.name}
                            </a>
                        </h2>
                        <p class="wine-subtitle">
                            {wineSpanish.producer} - {wineSpanish.vintage}
                        </p>
                        <p>{wineSpanish.type} - {wineSpanish.region}</p>
                    </div>

                    <div class="reason-section">
                        <h3>L'Abbinamento</h3>
                        <p class="reason-text">
                            "{item.pairingSpanish.reason}"
                        </p>
                    </div>
                </div>

                <!-- Divider -->
                <div class="vertical-divider"></div>

                <!-- Italian Pairing -->
                <div class="pairing-column italian-column">
                    <div class="flag-header">
                        <span class="flag-icon">üáÆüáπ</span>
                        <span class="country-name">Italia</span>
                    </div>

                    <div class="wine-section">
                        <h2>
                            <a
                                href={`${import.meta.env.BASE_URL}/wines/${wineItalian.id}`}
                                class="wine-link"
                            >
                                {wineItalian.name}
                            </a>
                        </h2>
                        <p class="wine-subtitle">
                            {wineItalian.producer} - {wineItalian.vintage}
                        </p>
                        <p>{wineItalian.type} - {wineItalian.region}</p>
                    </div>

                    <div class="reason-section">
                        <h3>L'Abbinamento</h3>
                        <p class="reason-text">
                            "{item.pairingItalian.reason}"
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .pairing-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 3rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .dish-section {
        margin-bottom: 2rem;
        padding: 2rem;
        background-color: #fcfcfc;
        border: 1px solid #eee;
        border-radius: 8px;
        text-align: center;
    }

    .pairing-header {
        text-align: center;
        margin: 2rem 0;
        position: relative;
    }

    .pairing-title {
        font-family: var(--font-accent);
        font-size: 1.5rem;
        color: var(--gold);
        background: white;
        padding: 0 1rem;
        position: relative;
        z-index: 1;
    }

    .pairing-header::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #eee;
        z-index: 0;
    }

    .pairings-grid {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        gap: 2rem;
        align-items: stretch;
    }

    .pairing-column {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .flag-header {
        text-align: center;
        margin-bottom: 1rem;
    }

    .flag-icon {
        font-size: 2rem;
        display: block;
    }

    .country-name {
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 2px;
        color: #999;
        font-weight: 600;
    }

    .wine-section {
        padding: 1.5rem;
        background-color: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        text-align: center;
        margin-bottom: 1.5rem;
        flex-grow: 0;
    }

    .vertical-divider {
        width: 1px;
        background: #eee;
        align-self: stretch;
    }

    .label {
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 2px;
        color: #999;
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    h2 {
        color: var(--wine-red);
        font-family: var(--font-heading);
        font-size: 1.6rem;
        margin-bottom: 0.5rem;
    }

    .wine-link {
        color: inherit;
        text-decoration: none;
        border-bottom: 1px dotted var(--wine-red);
        transition: all 0.2s;
    }

    .wine-link:hover {
        border-bottom: 1px solid var(--wine-red);
        color: black;
    }

    .wine-subtitle {
        font-weight: bold;
        color: #555;
        margin-bottom: 0.2rem;
    }

    .reason-section {
        text-align: center;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .reason-section h3 {
        font-family: var(--font-accent);
        color: var(--gold);
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .reason-text {
        font-size: 1.1rem;
        line-height: 1.6;
        font-style: italic;
        color: #444;
        font-family: var(--font-heading);
    }

    @media (max-width: 768px) {
        .pairings-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
        }

        .vertical-divider {
            display: none;
        }

        .pairing-card {
            padding: 1.5rem;
        }
    }
</style>
