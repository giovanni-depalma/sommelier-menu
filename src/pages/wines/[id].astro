---
import Layout from "../../layouts/Layout.astro";
import wines from "../../data/wines";

export function getStaticPaths() {
    return wines.map((wine) => ({
        params: { id: wine.id },
        props: { wine },
    }));
}

const { wine } = Astro.props;
---

<Layout title={`${wine.name} - Sommelier Menu`}>
    <div class="container">
        <a href={import.meta.env.BASE_URL + "/wines"} class="back-link"
            >← Torna alla Carta dei Vini</a
        >

        <div class="wine-detail-card">
            <header class="wine-header">
                <h1>{wine.name}</h1>
                <div class="wine-meta">
                    <span class="producer">{wine.producer}</span>
                    <span class="vintage">{wine.vintage}</span>
                </div>
            </header>

            <div class="wine-info-grid">
                <div class="info-item">
                    <span class="label">Regione</span>
                    <span class="value">{wine.region}, {wine.country}</span>
                </div>
                <div class="info-item">
                    <span class="label">Tipologia</span>
                    <span class="value">{wine.type}</span>
                </div>
                <div class="info-item">
                    <span class="label">Uvaggio</span>
                    <span class="value">{wine.grape}</span>
                </div>
                <div class="info-item">
                    <span class="label">Prezzo</span>
                    <span class="value">€ {wine.price}</span>
                </div>
            </div>

            <div class="wine-description">
                <h2>Descrizione</h2>
                <p class="description-text">
                    {wine.details || wine.description}
                </p>
            </div>

            {
                wine.link && (
                    <div class="wine-actions">
                        <a
                            href={wine.link}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="external-link"
                        >
                            Scopri di più sul sito del produttore ↗
                        </a>
                    </div>
                )
            }
        </div>
    </div>
</Layout>

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .back-link {
        display: inline-block;
        margin-bottom: 2rem;
        color: var(--text-color);
        text-decoration: none;
        font-weight: 500;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    .wine-detail-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .wine-header {
        border-bottom: 1px solid #eee;
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    h1 {
        font-size: 2.5rem;
        margin: 0 0 0.5rem 0;
        color: var(--heading-color);
        font-family: "Playfair Display", serif;
    }

    .wine-meta {
        font-size: 1.2rem;
        color: #666;
    }

    .producer {
        font-weight: 600;
        color: #333;
    }

    .vintage {
        margin-left: 0.5rem;
        color: #888;
    }

    .wine-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2.5rem;
        background: #f9f9f9;
        padding: 1.5rem;
        border-radius: 8px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .label {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #888;
        margin-bottom: 0.25rem;
    }

    .value {
        font-size: 1.1rem;
        font-weight: 500;
        color: #333;
    }

    .wine-description {
        margin-bottom: 2.5rem;
    }

    .wine-description h2 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--heading-color);
    }

    .description-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #444;
    }

    .wine-actions {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #eee;
    }

    .external-link {
        display: inline-block;
        background-color: #333;
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.2s;
    }

    .external-link:hover {
        background-color: #000;
    }

    @media (max-width: 600px) {
        .wine-detail-card {
            padding: 1.5rem;
        }

        h1 {
            font-size: 2rem;
        }
    }
</style>
