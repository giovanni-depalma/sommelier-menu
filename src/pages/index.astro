---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Restaurante Fusión - España & Italia" bodyClass="landing-page">
	<div class="landing-container">
		<header class="main-header">
			<h1>Restaurante <span class="accent">Fusión</span></h1>
			<p class="subtitle">Alma Española, Cuore Italiano</p>
		</header>

		<nav class="main-nav">
			<a href={`${import.meta.env.BASE_URL}/menu`} class="nav-card">
				<div class="card-content">
					<h2>Menu</h2>
					<p>Tapas, Paellas & Tradizione</p>
				</div>
			</a>
			<a href={`${import.meta.env.BASE_URL}/wines`} class="nav-card">
				<div class="card-content">
					<h2>Carta dei Vini</h2>
					<p>Selezione Sommelier</p>
				</div>
			</a>
		</nav>

		<footer class="main-footer">
			<p>&copy; 2025 Restaurante Fusión. Designed for Sommelier Exam.</p>
		</footer>
	</div>
</Layout>
