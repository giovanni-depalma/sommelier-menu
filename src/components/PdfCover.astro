---
interface Props {
    qrCodeUrl: string;
    title: string;
    description: string;
}

const { qrCodeUrl, title, description } = Astro.props;
---

<div class="pdf-cover-page">
    <div class="cover-content">
        <img
            src=`${import.meta.env.BASE_URL}/logo_print.png`
            alt="Logo"
            class="cover-logo"
        />
        <h1 class="cover-title">{title}</h1>
        <div class="cover-qr">
            <img src={qrCodeUrl} alt="QR Code" />
        </div>
        <p class="cover-description">{description}</p>
    </div>
</div>

<style>
    .pdf-cover-page {
        display: none;
    }

    :global(body.is-pdf-generation) .pdf-cover-page {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 90vh;
        width: 100%;
        page-break-after: always;
        text-align: center;
        background: white;
    }

    .cover-logo {
        max-width: 300px;
        margin-bottom: 2rem;
        height: auto;
    }

    .cover-title {
        font-family: "Cinzel", serif;
        font-size: 3rem;
        margin-bottom: 3rem;
        color: #333;
    }

    .cover-qr img {
        width: 200px;
        height: 200px;
        margin-bottom: 2rem;
    }

    .cover-description {
        font-family: "Lato", sans-serif;
        font-size: 1.5rem;
        color: #666;
        max-width: 600px;
        line-height: 1.6;
        margin: 0 auto;
    }
</style>
